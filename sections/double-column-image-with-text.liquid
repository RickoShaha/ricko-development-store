{% schema %}
    {
        "name": "Double Column Image",
        "class": "double-column-image",
        "settings": [
            {
                "type": "select",
                "id": "section_width",
                "label": "Section Width",
                "options": [
                    {
                        "value": "600",
                        "label": "Small"
                    },
                    {
                        "value": "967",
                        "label": "Medium"
                    },
                    {
                        "value": "1200",
                        "label": "Large"
                    },
                    {
                        "value": "custom",
                        "label": "Custom"
                    }
                ],
                "default": "967"
            },
            {
                "type": "range",
                "id": "custom_section_width",
                "label": "Custom Section Width",
                "min": 200,
                "max": 1200,
                "step": 10,
                "unit": "px",
                "default": 600
            }
        ],
        "blocks": [
            {
                "type": "image",
                "name":  "Image",
                "settings": [
                    {
                        "type": "checkbox",
                        "id": "background_enable_image1",
                        "label": "Add Background Color to First Image",
                        "default": false
                    },
                    {
                        "type": "color",
                        "id": "background_color_image1",
                        "label": "First Image Background Color",
                        "default": "#FFFFFF"
                    },
                    {
                        "type": "range",
                        "id": "background_enabled_image1_padding",
                        "min": 0,
                        "max": 15,
                        "step": 1,
                        "unit": "%",
                        "label": "First Image Padding(Applicable if background color is selected)",
                        "default": 6
                    },
                    {
                        "type": "image_picker",
                        "id": "first_image",
                        "label": "Select First Image"
                    },
                    {
                        "type": "checkbox",
                        "id": "add_caption_image1",
                        "label": "Add Caption for First Image",
                        "default": false
                    },
                    {
                        "type": "richtext",
                        "id": "caption_image1",
                        "label": "First Image Caption",
                        "default": "<p>Add caption for first image</p>"
                    },
                    {
                        "type": "font",
                        "id": "caption_font_family_image1",
                        "label": "First Caption Font Family"
                    },
                    {
                        "type": "color",
                        "id": "caption_font_color_image1",
                        "label": "First Caption Text Color",
                        "default": "#000000"
                    },
                    {
                        "type": "range",
                        "id": "caption_font_size_image1",
                        "min": 10,
                        "max": 50,
                        "step": 1,
                        "unit": "px",
                        "label": "First Caption Font Size",
                        "default": 15
                    },
                    {
                        "type": "select",
                        "id": "caption_alignment_image1",
                        "label": "First Caption Alignment",
                        "options": [
                            {
                                "value": "left",
                                "label": "Left"
                            },
                            {
                                "value": "center",
                                "label": "Center"
                            },
                            {
                                "value": "right",
                                "label": "Right"
                            }
                        ],
                        "default": "left"
                    },
                    {
                        "type": "range",
                        "id": "caption_line_height_image1",
                        "min": 0,
                        "max": 200,
                        "step": 2,
                        "unit": "px",
                        "label": "First Caption Line Height",
                        "default": 0
                    },
                    

                    {
                        "type": "checkbox",
                        "id": "switch_images",
                        "label": "Switch Images",
                        "default": false
                    },

                    {
                        "type": "checkbox",
                        "id": "gap_enabled",
                        "label": "Enable Gap Between Images",
                        "default": false
                    },
                    {
                        "type": "range",
                        "id": "gap_images_size",
                        "min": 10,
                        "max": 210,
                        "step": 2,
                        "unit": "px",
                        "label": "Gap Between Images",
                        "default": 50
                    },
                      


                    
                    {
                        "type": "checkbox",
                        "id": "background_enable_image2",
                        "label": "Add Background Color to Second Image",
                        "default": false
                    },
                    {
                        "type": "color",
                        "id": "background_color_image2",
                        "label": "Second Image Background Color",
                        "default": "#FFFFFF"
                    },
                    {
                        "type": "range",
                        "id": "background_enabled_image2_padding",
                        "min": 0,
                        "max": 15,
                        "step": 1,
                        "unit": "%",
                        "label": "Second Image Padding(Applicable if background color is selected)",
                        "default": 6
                    },
                    {
                        "type": "image_picker",
                        "id": "second_image",
                        "label": "Select Second Image"
                    },
                    {
                        "type": "checkbox",
                        "id": "add_caption_image2",
                        "label": "Add Caption for Second Image",
                        "default": false
                    },
                    {
                        "type": "richtext",
                        "id": "caption_image2",
                        "label": "Second Image Caption",
                        "default": "<p>Add caption for second image</p>"
                    },
                    {
                        "type": "font",
                        "id": "caption_font_family_image2",
                        "label": "Second Caption Font Family"
                    },
                    {
                        "type": "color",
